{
  "compilerOptions": {
    "module": "ES2020",
    "target": "es2020",           
    "lib": [
      "es2020", "DOM"
    ],
    "typeRoots": [
      "src/types",
      "node_modules/@types"
    ],
    "allowJs": true,
    "outDir": "lib",                          
    "rootDir": "src",
    "strict": true,        
    "moduleResolution": "Node", 
    "noImplicitAny": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "declaration": true
  }
}