{
  "name": "carmel",
  "version": "0.3.0",
  "environment": "production",
  "description": "The Carmel Platform",
  "productName": "Carmel",
  "main": "node_modules/react-electron-chunky/lib",
  "scripts": {
    "test": "react-savor test",
    "lint": "react-savor lint",
    "coverage": "react-savor coverage",
    "codeclimate": "react-savor codeclimate",
    "reset:web": "aws cloudfront create-invalidation --distribution-id E34TLSWETGT1MQ --paths /\\* --profile carmel",
    "robots:web": "echo 'User-agent: *\nDisallow: /' > web/build/robots.txt",
    "deploy:web": "aws s3 sync web/build s3://www.carmel.io --profile carmel",
    "deploy:nextweb": "aws s3 sync web/build s3://next.carmel.io --profile carmel",
    "package:web": "chunky package web",
    "push:web": "npm run package:web && npm run deploy:web && npm run reset:web",
    "push:nextweb": "npm run package:web && npm run robots:web && npm run deploy:nextweb",
    "push": "npm run push:web"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fluidtrends/carmel.git"
  },
  "homepage": "http://www.carmel.io",
  "babel": {
    "plugins": [
      "transform-react-jsx",
      "transform-es2015-destructuring",
      "transform-object-rest-spread",
      "css-modules-transform",
      "styled-jsx/babel"
    ],
    "presets": [
      "react",
      "env",
      "stage-2"
    ]
  },
  "config": {
    "forge": {
      "make_targets": {
        "win32": [
          "squirrel"
        ],
        "darwin": [
          "zip",
          "dmg"
        ],
        "linux": [
          "deb",
          "rpm"
        ]
      },
      "electronPackagerConfig": {
        "packageManager": "npm",
        "asar": false,
        "quiet": false,
        "protocol": "carmel://",
        "icon": "./assets/icons/appicon",
        "ignore": [
          ".chunky.json",
          ".chunky",
          "cloud",
          "ios",
          "android",
          "images",
          "docs",
          "roadmap"
        ]
      },
      "electronInstallerDMG": {},
      "electronWinstallerConfig": {
        "name": "Carmel"
      },
      "electronInstallerDebian": {
        "homepage": "https://carmel.io"
      },
      "electronInstallerRedhat": {},
      "github_repository": {
        "owner": "fluidtrends",
        "name": "carmel",
        "prerelease": true
      },
      "windowsStoreConfig": {
        "packageName": "carmel.io",
        "name": "Carmel"
      }
    }
  },
  "dependencies": {
    "firebaseline": "^0.7.6",
    "platform": "^1.3.5",
    "react": "^16.3.2",
    "react-blockchain-chunky": "^0.9.7",
    "react-chunky": "^0.9.24",
    "react-dom": "^16.3.2",
    "react-dom-chunky": "^0.9.90",
    "react-electron-chunky": "0.9.x",
    "react-mdl": "^1.11.0",
    "react-vertical-timeline-component": "^2.0.5"
  },
  "devDependencies": {
    "electron-prebuilt-compile": "1.8.4",
    "firebase-admin": "^5.12.0",
    "react-savor": "0.x"
  }
}
