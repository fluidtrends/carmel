{
  "compilerOptions": {
    "lib": [
      "ES2020",
      "ES2020.Promise",
      "ES2020.String",
      "ES2020.BigInt",
      "DOM",
      "DOM.Iterable"
    ],
    "isolatedModules": true,
    "esModuleInterop": true,
    "jsx": "preserve",
    "skipLibCheck": true,
    // "moduleResolution": "node",
    "resolveJsonModule": true,
    "target": "ES2020",
    "useUnknownInCatchVariables": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "~/*": [
        "./*"
      ]
    },
    "noEmit": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "incremental": true,
    "module": "ES2020",
    "moduleResolution": "node"
  },
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
